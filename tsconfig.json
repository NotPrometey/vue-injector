{
  "compilerOptions": {
    "lib": [
      "es6",
      "es5",
      "dom",
      "es2015.promise",
      "es2015.core"
    ],
    "target": "es5",
    "module": "esnext",
    "moduleResolution": "node",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "rootDirs": ["./"],
    "typeRoots": [
      "node_modules/@types",
      "types"
    ],
    "types": [
      "node"
    ]
  },
  "include": [
    "**/*.ts"
  ]
}